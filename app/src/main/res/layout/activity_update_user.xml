<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sapir.logmaron.UpdateUser">

    <EditText
        android:id="@+id/NewPasswordRepeat"
        android:layout_width="293dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPassword|textVisiblePassword"
        android:text="New Password"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/CurrPassword"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/FirstName"
        android:layout_width="293dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="First Name"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toTopOf="@+id/LastName"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="225dp"
        android:layout_height="58dp"
        android:fontFamily="cursive"
        android:text="Details Update"
        android:textColor="#00ffff"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/LastName"
        android:layout_width="293dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Last Name"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/CurrPassword"
        android:layout_marginLeft="46dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/CurrPassword"
        android:layout_width="293dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPassword|textVisiblePassword"
        android:text="Current Password"
        tools:layout_editor_absoluteY="216dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/NewPasswordRepeat"
        android:layout_width="293dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPassword|textVisiblePassword"
        android:text="Repeat New Password"
        tools:layout_editor_absoluteY="354dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:text="Save"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/NewPasswordRepeat" />
</android.support.constraint.ConstraintLayout>
